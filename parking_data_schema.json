{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ParkingStation",
    "type": "object",
    "properties": {
      "stationId": { "type": "string" },
      "name": { "type": "string" },
      "location": {
        "type": "object",
        "properties": {
          "address": { "type": "string" },
          "latitude": { "type": "number" },
          "longitude": { "type": "number" }
        },
        "required": ["address", "latitude", "longitude"]
      },
      "capacity": {
        "type": "object",
        "properties": {
          "totalSpots": { "type": "integer" },
          "availableSpots": { "type": "integer" }
        },
        "required": ["totalSpots", "availableSpots"]
      },
      "rates": {
        "type": "object",
        "properties": {
          "hourlyRate": { "type": "number" },
          "dailyRate": { "type": "number" },
          "monthlyRate": { "type": "number" }
        },
        "required": ["hourlyRate", "dailyRate", "monthlyRate"]
      },
      "operatingHours": {
        "type": "object",
        "properties": {
          "monday": {
            "type": "object",
            "properties": {
              "open": { "type": "string" },
              "close": { "type": "string" }
            },
            "required": ["open", "close"]
          },
          "tuesday": { "$ref": "#/properties/operatingHours/properties/monday" },
          "wednesday": { "$ref": "#/properties/operatingHours/properties/monday" },
          "thursday": { "$ref": "#/properties/operatingHours/properties/monday" },
          "friday": { "$ref": "#/properties/operatingHours/properties/monday" },
          "saturday": { "$ref": "#/properties/operatingHours/properties/monday" },
          "sunday": { "$ref": "#/properties/operatingHours/properties/monday" }
        },
        "required": ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"]
      },
      "amenities": {
        "type": "object",
        "properties": {
          "hasEVCharging": { "type": "boolean" },
          "hasHandicapAccess": { "type": "boolean" },
          "hasSecurityCameras": { "type": "boolean" },
          "acceptsCreditCard": { "type": "boolean" }
        },
        "required": ["hasEVCharging", "hasHandicapAccess", "hasSecurityCameras", "acceptsCreditCard"]
      },
      "contactInfo": {
        "type": "object",
        "properties": {
          "phone": { "type": "string" },
          "email": { "type": "string" }
        },
        "required": ["phone", "email"]
      },
      "lastUpdated": { "type": "string", "format": "date-time" }
    },
    "required": ["stationId", "name", "location", "capacity", "rates", "operatingHours", "amenities", "contactInfo", "lastUpdated"]
  }
  